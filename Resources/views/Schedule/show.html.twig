{% extends "EsolvingEschoolUserBundle::template.html.twig" %}
{% trans_default_domain "EsolvingEschoolRoomBundle" %}
{% block title %}{% trans %}show_schedule{% endtrans %}{% endblock %}
{% block content %}
<div id="content">
    <h1>{{ block('title') }}</h1>
    <ul class="record-actions record-actions-header">
        <li>
            <a href="{{ path('esolving_eschool_roomB_Schedule') }}" class="button ui-state-default">
                <span class="ui-icon ui-icon-document icon-position"></span>
            {% trans %}back_to_the_list{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('esolving_eschool_roomB_Schedule_edit', { 'roomId': entity.room.id,'teacherId':entity.teacher.id }) }}" class="button ui-state-default">
                <span class="ui-icon ui-icon-pencil icon-position"></span>
            {% trans %}edit{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('esolving_eschool_roomB_Schedule_delete', { 'roomId': entity.room.id,'teacherId':entity.teacher.id }) }}" class="button ui-state-default">
                <span class="ui-icon ui-icon-trash icon-position"></span>
    {% trans %}delete{% endtrans %}
            </a>
        </li>
    </ul>
    <div class="clearfix divider-medium"></div>
{% include 'EsolvingEschoolRoomBundle:Schedule:show.inc.html.twig' with {'entity':entity} %}
</div>
{% endblock content %}
